# Server Configuration
PORT=5006
HOST=0.0.0.0
NODE_ENV=production

# Network Selection (base-sepolia or base)
# This automatically sets: chain ID, RPC URL, Verdikta aggregator address
NETWORK=base

# Contract Address (must be set per deployment)
# UPDATE THIS after deploying to mainnet with deploy_mainnet.sh
BOUNTY_ESCROW_ADDRESS=

# IPFS Configuration
IPFS_PINNING_SERVICE=https://api.pinata.cloud
# IPFS_PINNING_KEY=<your-pinata-jwt>
PIN_TIMEOUT_MS=20000

# IPFS Gateway (fallback for fetching)
IPFS_GATEWAY=https://ipfs.io
PINATA_GATEWAY=https://gateway.pinata.cloud

# Blockchain Sync
USE_BLOCKCHAIN_SYNC=true
SYNC_INTERVAL_SECONDS=20

# Optional: Override RPC URL (defaults to network's public RPC)
# RPC_URL=https://mainnet.base.org

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# TEMP DIR
VERDIKTA_TMP_DIR=/var/tmp/verdikta

# Testing
DEV_FAKE_RUBRIC_CID=false

# Archival Service Settings
ARCHIVE_TTL_DAYS=30
ARCHIVE_AFTER_RETRIEVAL_DAYS=7
PIN_VERIFY_INTERVAL_HOURS=1
