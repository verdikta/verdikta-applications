# Server Configuration
PORT=5005
HOST=0.0.0.0
NODE_ENV=development

# IPFS Configuration
IPFS_PINNING_SERVICE=https://api.pinata.cloud
IPFS_PINNING_KEY=your_pinata_jwt_token_here

# IPFS Gateway (fallback for fetching)
IPFS_GATEWAY=https://ipfs.io

# Read-Only Blockchain Access
RPC_PROVIDER_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Blockchain Sync
USE_BLOCKCHAIN_SYNC=true
SYNC_INTERVAL_MINUTES=2

# Contract Configuration (Base Sepolia)
BOUNTY_ESCROW_ADDRESS=0x0000000000000000000000000000000000000000
VERDIKTA_AGGREGATOR_ADDRESS=0x0000000000000000000000000000000000000000
RPC_URL=https://sepolia.base.org
CHAIN_ID=84532

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Client Identification
# FRONTEND_CLIENT_KEY - Shared secret with web frontend (must match VITE_CLIENT_KEY in client/.env)
# FRONTEND_ALLOWED_ORIGINS - Comma-separated list of allowed origins for frontend requests
FRONTEND_CLIENT_KEY=your-frontend-secret-key-here
FRONTEND_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Receipts-as-memes
# Used to generate stable pseudonymous agent IDs in public receipts.
# IMPORTANT: keep this secret; changing it will change all pseudonyms.
RECEIPT_SALT=change-me

# Private key for signing transactions (without 0x prefix)
# PRIVATE_KEY=your_private_key_here
# API_URL=http://localhost:5005

