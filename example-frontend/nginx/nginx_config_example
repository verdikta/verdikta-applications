# Place this at /etc/nginx/sites-available/playground.verdikta.org (replace domain)
server {
    server_name playground.verdikta.org;

    location / {
        proxy_pass http://localhost:3001;  
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    location /api/ {
        proxy_pass http://localhost:5000/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # managed by Certbot
    listen 443 ssl; 
    ssl_certificate /etc/letsencrypt/live/playground.verdikta.org/fullchain.pem; 
    ssl_certificate_key /etc/letsencrypt/live/playground.verdikta.org/privkey.pem; 
    include /etc/letsencrypt/options-ssl-nginx.conf; 
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; 

}
server {
    if ($host = playground.verdikta.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name playground.verdikta.org;
    return 404; # managed by Certbot
}
